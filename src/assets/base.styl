@import './styles'
*
*::before
*::after
  box-sizing border-box
  user-select none
html
  font-size 16px
body
  margin 0 auto
  padding 0
  width 100%
  background-color $color-grey-2
  color $color-grey-9
  font-size 12px
a, button, input, textarea
  -webkit-tap-highlight-color rgba(0,0,0,0)
p
  margin 0
  line-height 1.5
#app
  height 100vh
  -webkit-overflow-scrolling touch
  -webkit-font-smoothing: antialiased;
.ivu-icon
  font-size 14px
